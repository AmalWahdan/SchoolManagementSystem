@model TeacherProfileViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


@section Styles{
<style>

    .gradient-custom {
       
        background: #f6d365; 
        background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
        background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
    }

</style>
}


<section class="vh-100" >
    <div class="container py-5 h-120">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-10 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img  src="/Images/@Model.applicationUser.photoUrl"
                                  class="img-fluid my-5 rounded-circle" style="width: 120px;" />
                            <h5>@Model.applicationUser.Name</h5>
                            <p>@Model.applicationUser.Address</p>
                            <a  asp-controller="Teacher" asp-action="UpdateTeacher" class="text-muted">
                                <i class="far fa-edit mb-5"></i>
                            </a>
                           
                        </div>
                        <div class="col-md-8">
                            <div class="card-body py-4">
                                <h6>Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">@Model.applicationUser.Email</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Phone</h6>
                                        <p class="text-muted">@Model.applicationUser.PhoneNumber</p>
                                    </div>
                                </div>
                                <h6>Projects</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-12 mb-3">
                                        @if(Model.numperOfPendingHolidays!=0)
                                        {
                                            <div class="text-center">
                                                <h3 class="text-center">You have @Model.numperOfPendingHolidays Pendding holidays </h3>
                                                <a asp-controller="Teacher" asp-action="ShowHolidaysRequests" class="text-warning text-center text-decoration-none">Show Them </a>
                                           </div>
                                        }
                                    </div>
                                </div>
                                <div class="d-flex justify-content-start">
                                    <a href=""  class="text-warning "><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                                    <a href=""  class="text-warning mx-4"><i class="fab fa-twitter fa-lg me-3"></i></a>
                                    <a href=""  class="text-warning "><i class="fab fa-instagram fa-lg"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>